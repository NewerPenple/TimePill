<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="#fff"
    android:paddingTop="15dp">

    <RelativeLayout
        android:id="@+id/layout_home_icon1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_home_icon1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/tv_home_icon1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/niv_home_icon1"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="@color/textcolor_search_filter_bn"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_home_icon2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_home_icon2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/tv_home_icon2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/niv_home_icon2"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="@color/textcolor_search_filter_bn"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_home_icon3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_home_icon3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/tv_home_icon3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/niv_home_icon3"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="@color/textcolor_search_filter_bn"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_home_icon4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_home_icon4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/tv_home_icon4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/niv_home_icon4"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="@color/textcolor_search_filter_bn"
            android:textSize="14sp"
            />
    </RelativeLayout>
</LinearLayout>